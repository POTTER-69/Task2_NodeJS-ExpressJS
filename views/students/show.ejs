<%- include("../layout", { body: (function(){ %>
    <h1>
        <%= student.name %>
    </h1>
    <ul class="list-group mb-3">
        <li class="list-group-item">Major: <strong>
                <%= student.major %>
            </strong></li>
        <li class="list-group-item">Age: <strong>
                <%= student.age %>
            </strong></li>
        <li class="list-group-item">GPA: <strong>
                <%= student.gpa %>
            </strong></li>
        <li class="list-group-item">Created: <%= student.createdAt.toLocaleString() %>
        </li>
    </ul>

    <a href="/students" class="btn btn-secondary">Back</a>
    <a href="/students/<%= student._id %>/edit" class="btn btn-primary">Edit</a>

    <form method="POST" action="/students/<%= student._id %>/delete" style="display:inline-block; margin-left: 8px;"
        onsubmit="return confirm('Delete this student?');">
        <button class="btn btn-danger">Delete</button>
    </form>
    <% })() } ) %>